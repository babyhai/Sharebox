<!DOCTYPE html>
<html>
  <head>
    <title>ShareBox | <%= content_for?(:title) ? yield(:title) : "File-sharing web app" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div class="header_wrapper">
      <div class="logo">
        <%= link_to "ShareBox", root_url %>
      </div>
      <div id="login_user_status">
        <% if logged_in? %>
            <%= current_user.name  %>
            |
            <%= link_to '退出', logout_path, method: :delete %>
        <% else %>
            <em>Not Signed in.</em>
            <%= link_to '登录', new_session_path%>
            or
            <%= link_to '注册', new_user_path%>
        <% end %>
      </div>
    </div>
    <%= render 'layouts/file' %>
  </body>
</html>
